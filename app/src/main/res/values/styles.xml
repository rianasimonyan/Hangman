<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Container style -->
    <style name="ContainerStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">90vw</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:borderRadius">12dp</item>
        <item name="android:shadowColor">#6F5500</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">12dp</item>
        <item name="android:shadowRadius">24dp</item>
    </style>

    <!-- Options container style -->
    <style name="OptionsContainerStyle">
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Letter container style -->
    <style name="LetterContainerStyle">
        <!-- Customize letter button style as needed -->
    </style>

    <!-- User input section style -->
    <style name="UserInputSectionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- New game popup style -->
    <style name="NewGamePopupStyle">
        <!-- Customize new game popup style as needed -->
    </style>

    <!-- Result text style -->
    <style name="ResultTextStyle">
        <!-- Customize result text style as needed -->
    </style>

    <!-- New game button style -->
    <style name="NewGameButtonStyle">
        <!-- Customize new game button style as needed -->
    </style>

    <!-- Win message style -->
    <style name="WinMessageStyle">
        <item name="android:textColor">#39D78D</item>
    </style>

    <!-- Lose message style -->
    <style name="LoseMessageStyle">
        <item name="android:textColor">#FE5152</item>
    </style>

</resources>
